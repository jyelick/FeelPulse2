modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Native App"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Install Dependencies"
author = 41617389
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "React Native App"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --clear --port 8080"
waitForPort = 8080

[deployment]
run = ["sh", "-c", "npx expo start --web --port=5000 --non-interactive"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install && npx expo export --platform web"]

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
expertMode = true
integrations = ["javascript_openai:1.0.0"]
