modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Install Dependencies"
author = 41617389
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FeelPulse Web Preview"

[[workflows.workflow]]
name = "FeelPulse Web Preview"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "CI=1 HOST=0.0.0.0 WEB_HOST=0.0.0.0 npx expo start --web --port ${PORT:-5000}"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
run = ["sh", "-c", "npx expo start --web --port=5000 --non-interactive"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install && npx expo export --platform web"]

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33277
externalPort = 3001

[[ports]]
localPort = 34141
externalPort = 3002

[agent]
expertMode = true
