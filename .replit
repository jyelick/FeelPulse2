modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "iOS App"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Install Dependencies"
author = 41617389
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "iOS App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --ios"
waitForPort = 19000

[deployment]
run = ["sh", "-c", "npx expo start --web --port=5000 --non-interactive"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install && npx expo export --platform web"]

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081
